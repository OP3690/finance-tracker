generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Transaction {
  id          String   @id @default(cuid())
  date        String
  category    String
  description String
  amount      Float
  type        String   @default("expense")
  comment     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String   @unique
  descriptions String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
} 